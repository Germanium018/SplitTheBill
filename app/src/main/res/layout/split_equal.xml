<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splitEqual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="40dp"
    tools:context=".SplitEqualActivity">

    <ImageView
        android:id="@+id/imageview_backbutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingStart="5dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/bold"
        android:text="Split"
        android:textColor="#064789"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textview_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/textview_title"
        android:fontFamily="@font/inter"
        android:paddingStart="80dp"
        android:text="Done"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/layout_split_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_done"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_rectangle"
        android:padding="30dp">

        <TextView
            android:id="@+id/textview_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/bold"
            android:text="Calcualtion Summary"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ListView
            android:id="@+id/listview_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_summary"
            android:layout_marginTop="10dp"
            android:dividerHeight="1dp" />
    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/landing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LandingActivity">

    <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:orientation="vertical">

            <!-- User Greetings and Notification Bell -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/imageview_user"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/user"
                    android:layout_marginEnd="10dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello,"
                        android:fontFamily="@font/inter"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nina"
                        android:fontFamily="@font/inter"
                        android:textSize="14sp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageview_notification"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/bell"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="2"/>
            </LinearLayout>

            <!-- Total Balance Display -->
            <LinearLayout
                android:id="@+id/textview_card"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_rectangle"
                android:layout_marginTop="10dp"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to"
                    android:fontFamily="@font/inter"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Split the Bill!"
                    android:fontFamily="@font/bold"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent billing"
                    android:fontFamily="@font/inter"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_weight="1"/>
            </LinearLayout>

            <!-- Recent Billings -->
            <ListView
                android:id="@+id/listViewBilling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/white"
                android:dividerHeight="1dp"/>
        </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bar"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageview_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/home"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/imageview_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/add"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/imageview_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile1"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:id="@+id/imageview_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/settings"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="20dp"/>
    </LinearLayout>
</RelativeLayout>
